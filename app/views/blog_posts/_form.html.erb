<%= form_with(model: blog_post, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-4xl mx-auto") do |form| %>

  <% if form.object.errors.any? %>
    <%= render "shared/errors", object: blog_post %>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
      <%= form.label :cover_image, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.file_field :cover_image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <% if blog_post.cover_image.present? %>
        <div id="<%= dom_id(blog_post, :cover_image)%>">
          <%= image_tag blog_post.cover_image, class: "w-1/3" %>
          <%= link_to "Remove cover image", blog_post_cover_image_path(blog_post), data: { turbo_method: :delete, turbo_confirm: "Delete cover image?"} %>
        </div>
      <% end %>
  </div>

  <div class="mb-6">
    <%= form.label :content, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.rich_text_area :content, class: "min-h-[10rem] md:min-h-[15rem] h-auto shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :published_at, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.datetime_select :published_at, include_blank: true,  class: "h-40 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>


  <div class="flex items-center justify-center">
    <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer focus:outline-none focus:shadow-outline" %>
  </div>

<% end %>
