<h2><%= @blog_post.title %></h2>
<p><%= @blog_post.content %></p>
<%= output_time_info(@blog_post) %>

<section class="actions sm:flex sm:gap-3">
<%= link_to "Back to All Posts", blog_posts_path, class:"inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 my-2 rounded" %>

<% if user_signed_in? %>
  <%= link_to "Edit", edit_blog_post_path(@blog_post), class:"inline-block bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 my-2 rounded" %>
  <%= button_to "Delete", @blog_post, method: :delete, data: { turbo_confirm: "You sure??" }, class:"inline-block bg-gray-800 my-2 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded" %>
<% end %>

</section>